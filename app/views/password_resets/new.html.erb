<h1>Forgot password?</h1>

<div class="bg-slate-900 border-2 border-white rounded-lg my-2 p-2">
  <%= form_with url: password_resets_path do |form| %>
    <div class="flex flex-col gap-2">
      <div>
        <%=
          form.email_field :email_address,
                           class: "w-full rounded-lg bg-slate-800",
                           required: true,
                           autofocus: true,
                           autocomplete: "username",
                           placeholder: "Enter your email address",
                           value: params[:email_address]
        %>
      </div>

      <div>
        <%=
          form.submit "Email reset instructions",
                      class: "py-2 px-4 bg-slate-700 hover:bg-slate-600 cursor-pointer rounded-lg font-bold"
        %>
      </div>
    </div>
  <% end %>
</div>

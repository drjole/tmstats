<% if authenticated? %>
  <nav>
    <%= render(CardComponent.new) do %>
      <div class="font-bold flex flex-1 justify-evenly">

        <% if policy(User).index? %>
          <%= link_to User do %>
            <%= icon("people") %>
          <% end %>
        <% end %>

        <% if policy(User).create? %>
          <%= link_to %i[new user] do %>
            <%= icon("person-plus") %>
          <% end %>
        <% end %>

        <% if policy(:leaderboards).show? %>
          <%= link_to :leaderboard do %>
            <%= icon("trophy") %>
          <% end %>
        <% end %>

        <% if policy(Game).index? %>
          <%= link_to Game do %>
            <%= icon("list-ul") %>
          <% end %>
        <% end %>

        <% if policy(Game).create? %>
          <%= link_to %i[new game] do %>
            <%= icon("plus-circle") %>
          <% end %>
        <% end %>

        <%= link_to :profile do %>
          <div class="text-green-500 hover:text-green-700">
            <%= icon("person-circle") %>
          </div>
        <% end %>

        <%= button_to :logout, method: :delete, class: "hover:text-slate-400", form: { class: "inline" } do %>
          <%= icon("door-open") %>
        <% end %>

      </div>
    <% end %>
  </nav>
<% end %>

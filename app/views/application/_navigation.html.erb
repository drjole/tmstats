<% if authenticated? %>
  <nav>
    <%= render(CardComponent.new) do %>
      <div class="font-bold flex flex-1 justify-evenly">

        <% if policy(User).index? %>
          <%= link_to User do %>
            <%= icon("people") %>
          <% end %>
        <% end %>

        <% if policy(User).create? %>
          <%= link_to %i[new user] do %>
            <%= icon("person-plus") %>
          <% end %>
        <% end %>

        <% if policy(:leaderboards).show? %>
          <%= link_to :leaderboard do %>
            <%= icon("trophy") %>
          <% end %>
        <% end %>

        <% if policy(Game).index? %>
          <%= link_to Game do %>
            <%= icon("list-ul") %>
          <% end %>
        <% end %>

        <% if policy(Game).create? %>
          <%= link_to %i[new game] do %>
            <%= icon("plus-circle") %>
          <% end %>
        <% end %>

        <%= link_to :profile do %>
          <div class="text-green-500 hover:text-green-700">
            <%= icon("person-circle") %>
          </div>
        <% end %>

        <div data-controller="modal">
          <dialog
            class="bg-transparent text-white backdrop:bg-gray-800/70"
            data-modal-target="dialog"
            data-action="click->modal#close"
          >
            <div class="w-full h-full" data-action="click->modal#stopClickPropagation">
              <%= render CardComponent.new do %>
                <div class="flex flex-col gap-2 justify-center items-center">
                  <div>Continue with log out?</div>
                  <div class="flex gap-2">
                    <form method="dialog">
                      <button class="py-2 px-4 bg-slate-700 hover:bg-slate-600 cursor-pointer rounded-lg font-bold">
                        Cancel
                      </button>
                    </form>
                    <%=
                      button_to :logout,
                                method: :delete,
                                class: "py-2 px-4 bg-red-700 hover:bg-red-600 cursor-pointer rounded-lg font-bold",
                                form: {
                                  class: "inline",
                                } do
                    %>
                      Log out
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </dialog>
          <button class="hover:text-slate-400" data-action="modal#show">
            <%= icon("door-open") %>
          </button>
        </div>

      </div>
    <% end %>
  </nav>
<% end %>

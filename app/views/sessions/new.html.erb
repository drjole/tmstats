<h1>Login</h1>

<div class="bg-slate-900 border-2 border-white rounded-lg my-2 p-2">
  <%= form_with url: session_path do |form| %>
    <div class="flex flex-col gap-2">
      <div>
        <%= form.label :email_address %>
        <%=
          form.email_field :email_address,
                           class: "w-full rounded-lg bg-slate-800",
                           required: true,
                           autofocus: true,
                           autocomplete: "username",
                           value: params[:email_address]
        %>
      </div>

      <div>
        <%= form.label :password %>
        <%=
          form.password_field :password,
                              class: "w-full rounded-lg bg-slate-800",
                              required: true,
                              autocomplete: "current-password"
        %>
      </div>

      <div>
        <%= form.submit "Sign in", class: "py-2 px-4 bg-slate-700 hover:bg-slate-600 cursor-pointer rounded-lg font-bold" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Forgot password?", new_password_reset_path %>

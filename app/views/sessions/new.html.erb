<h1>Login</h1>

<div class="my-2">
  <%= render(CardComponent.new) do %>
    <%= form_with url: session_path do |form| %>
      <div class="flex flex-col gap-2">
        <div>
          <%= form.label :email_address %>
          <%=
            form.email_field :email_address,
                             class: "form-control",
                             required: true,
                             autofocus: true,
                             autocomplete: "username",
                             value: params[:email_address]
          %>
        </div>

        <div>
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control", required: true, autocomplete: "current-password" %>
        </div>

        <div>
          <%= render(SubmitComponent.new(form, text: "Sign in")) %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "Forgot password?", new_password_reset_path %>

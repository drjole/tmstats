<%= form_with model: user do |form| %>
  <%= render "shared/errors", form: form %>

  <%= form.label :email_address %>
  <%= form.email_field :email_address, required: true, autocomplete: "email" %>

  <%= form.label :name %>
  <%= form.text_field :name, required: true, autocomplete: "name" %>

  <%= form.label :password %>
  <%= form.password_field :password, required: true, autocomplete: user.persisted? ? "current-password" : "new-password" %>

  <%= form.label :password_confirmation %>
  <%=
    form.password_field :password_confirmation,
                        required: true,
                        autocomplete: user.persisted? ? "current-password" : "new-password"
  %>

  <%= form.submit %>
<% end %>

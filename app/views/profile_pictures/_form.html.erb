<div class="my-2">
  <%= render(CardComponent.new) do %>
    <%= form_with model: user, url: [user, :profile_picture] do |form| %>
      <div class="flex flex-col gap-2">
        <%= render "shared/errors", form: form %>

        <div>
          <%= render partial: "users/profile_picture", locals: { user: user, variant: :thumb } %>
        </div>

        <div>
          <%= form.label :profile_picture %>
          <%= form.file_field :profile_picture, class: "form-control", required: true %>
        </div>

        <div>
          <%= render(SubmitComponent.new(form, text: "Update profile picture")) %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

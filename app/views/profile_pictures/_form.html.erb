<div class="bg-slate-900 border-2 border-white rounded-lg my-2 p-2">
  <%= form_with model: user, url: [user, :profile_picture] do |form| %>
    <div class="flex flex-col gap-2">
      <%= render "shared/errors", form: form %>

      <div>
        <%= image_tag user.profile_picture.variant(:thumb) if user.profile_picture.attached? %>
      </div>

      <div>
        <%= form.label :profile_picture %>
        <%= form.file_field :profile_picture, class: "w-full rounded-lg bg-slate-800", required: true %>
      </div>

      <div>
        <%=
          form.submit "Update profile picture",
                      class: "py-2 px-4 bg-slate-700 hover:bg-slate-600 cursor-pointer rounded-lg font-bold"
        %>
      </div>
    </div>
  <% end %>
</div>

<div class="bg-slate-900 border-2 border-white rounded-lg my-2 p-2">
  <%= form_with model: user, url: [user, :password] do |form| %>
    <div class="flex flex-col gap-2">
      <%= render "shared/errors", form: form %>

      <div>
        <%= form.label :password %>
        <%=
          form.password_field :password,
                              class: "w-full rounded-lg bg-slate-800",
                              required: true,
                              autocomplete: user.persisted? ? "current-password" : "new-password"
        %>
      </div>

      <div>
        <%= form.label :password_confirmation %>
        <%=
          form.password_field :password_confirmation,
                              class: "w-full rounded-lg bg-slate-800",
                              required: true,
                              autocomplete: user.persisted? ? "current-password" : "new-password"
        %>
      </div>

      <div>
        <%=
          form.submit "Update password",
                      class: "py-2 px-4 bg-slate-700 hover:bg-slate-600 cursor-pointer rounded-lg font-bold"
        %>
      </div>
    </div>
  <% end %>
</div>

<h1>Leaderboard</h1>

<div class="my-2">
  <%= render(CardComponent.new) do %>
    <% @elos.each_with_index do |(user, elo), index| %>
      <p>
        <%= index + 1 %>.
        <%= user.name %>:
        <%= elo %>
      </p>
    <% end %>

    <div class="my-4 text-xs">Play at least 5 games to appear on the leaderboard!</div>
    <hr/>

    <%= turbo_frame_tag :elo, src: chart_elo_path %>
  <% end %>
</div>
